doctype html
html
  head
    meta(charset='utf-8')
    title
  body
    h1
      a(href='/topic') Server Side JavaScript
    ul
      each topic in topics
        //
          topics배열 topic li로 나타날때 쓰임
        li
          a(href='/topic/'+topic.id)= topic.title
    article
      if topic
        h1= topic.title
        h3= topic.description
        div= 'by '+topic.author
      else
        h1 Welcome
        | My homepage
    div
      a(href='/topic/add') add
    if topic
      a(href='/topic/'+topic.id+'/edit') edit
      br
      a(href='/topic/'+topic.id+'/delete') delete
